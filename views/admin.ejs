<%- include('partials/header') %> 
<%- include('partials/nav') %> 

<div style="background-image: url('/images/backgound.jpg');">
  <div class="row no-gutters">
      <div class="col-md-1"></div>
      <div class="col-md-10" style="background-color: rgb(220, 198, 224);">
          <!-- Carousel =========================================== -->
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" src="/images/slide/slide1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/images/slide/slide2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/images/slide/slide3.jpg" alt="Third slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <!-- card ==================================================== -->
            <h3 class="text-center font-weight-bold mt-4">PRODUCT LIST</h3>
            <div class="d-flex justify-content-center">
              <a href="/add" class="btn btn-success mx-1">Add Product</a>
              <a href="/transactions_admin" class="btn btn-primary mx-1">Transactions</a>
            </div>
            <div class="row no-gutters">
              <% for( let i = 0; i < items.length; i++ ) { %>
                <div class="card mt-3 ml-3 items-card" style="width: 16rem;">
                  <img class="card-img-top" src=<%= items[i].photo %>  alt="Card image cap">
                  <div class="card-body bg-light">
                    <div class=" d-flex justify-content-center">
                      <h5 class="card-title"><%= items[i].name %> </h5>
                    </div>
                    <div class="d-flex justify-content-center mb-2">
                      <p class="card-text">Rp. <%= items[i].price %> </p>
                    </div>
                    <div class="justify-content-center">
                      <% if (isLogin) { %>
                        <div class="d-flex">
                          <a href="/edit/<%= items[i].id %> " class="btn btn-primary mx-1" style="flex: 1;">Edit</a>
                          <a href="/admin/<%= items[i].id %> " class="btn btn-danger mx-1" style="flex: 1;">Delete</a>
                        </div>
                      <% } else{ %>
                        <button onclick="loginAlert()" class="btn btn-primary px-2">Edit/button>
                        <button onclick="loginAlert()" class="btn btn-danger">Delete</button>
                      <% } %> 

                    </div>
                  </div>
                </div>
              <% } %>
            </div>
      </div>
      <div class="col-md-1"></div>
  </div>
</div>
<script>
  function loginAlert(){
    alert("Please login first!");
  }
</script>

<%- include('partials/footer') %> 

