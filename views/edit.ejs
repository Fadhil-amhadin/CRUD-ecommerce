<%- include('partials/header') %>
<%- include('partials/nav-min') %> 
<div style="background-image: url('/images/backgound.jpg'); padding-top: 50px; height: 87.5vh;">
    <div class="container">
        <div class="row no-gutters detail-row" style="border: 2px solid black; border-radius: 6px;">
            <div class="col-md-5">
                <img class="card-img-top" src="/images/product/<%= photo %>  " alt="">
            </div>
            <div class="col-md-7 d-block text-center" style="border-left: 2px solid black; background-color: rgb(191, 191, 191, 0.8);">
                <form action="" method="post">
                    <h2> Name </h1>
                    <div class="mb-4">
                        <input name="name" type="text" value="<%= name %>" style="border-radius: 15px; border: 1px solid grey;">
                    </div>
                    <div class="text-justify">
                        <h5 class="px-4 text-center">Description </h5>
                    </div>
                    <div class="d-flex"> 
                        <textarea name="description" style="border-radius: 15px; border: 1px solid grey; flex:1; margin: 0 15px 0 15px; overflow: hidden;"><%= description %></textarea>
                    </div>
                    <div class="mt-2">
                        <h5>Remaining Stock </h5>
                    </div>
                    <div>
                        <input name="stock" type="text" value="<%= stock %> " style="border-radius: 15px; border: 1px solid grey;">
                    </div>
                    <div>
                        <h5 class="mt-2">Price </h5>
                    </div>
                    <div>
                        <input name="price" type="text" value="<%= price %>" style="border-radius: 15px; border: 1px solid grey;">
                    </div>
                    <button class="btn btn-primary mt-4" type="submit">EDIT DATA</button>
                </form>
    
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %> 